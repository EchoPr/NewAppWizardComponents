<Page x:Class="NewAppWizardComponents.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:NewAppWizardComponents"
      xmlns:um="using:Uno.Material"
      Background="#F3F3F3">

  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/CustomColors.xaml"/>
        <ResourceDictionary Source="Resources/TextStyling.xaml"/>
        <ResourceDictionary Source="Resources/CustomBorders.xaml"/>
        <ResourceDictionary Source="Resources/Controls/BlockScrollViewer.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>


  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="5*"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="5*"/>
      <RowDefinition Height="10*"/>
      <RowDefinition Height="45*"/>
      <RowDefinition Height="40*"/>
    </Grid.RowDefinitions>

    <MenuBar Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
      <MenuBarItem Title="File" FontSize="8" Foreground="{StaticResource SolidDarkGray}" Background="Black" Height="20">
        <MenuFlyoutItem Text="New" Icon="OpenFile"/>
        <MenuFlyoutItem Text="Open..."/>
        <MenuFlyoutItem Text="Save"/>
        <MenuFlyoutItem Text="Exit"/>
      </MenuBarItem>

      <MenuBarItem Title="Edit">
        <MenuFlyoutItem Text="Undo"/>
        <MenuFlyoutItem Text="Cut"/>
        <MenuFlyoutItem Text="Copy"/>
        <MenuFlyoutItem Text="Paste"/>
      </MenuBarItem>
    </MenuBar>

    <ListView Grid.Column="0" Grid.Row="1" Grid.RowSpan="3"
                  x:Name="MethodsList"
                  ItemsSource="{Binding Methods}"
                  IsItemClickEnabled="True" ItemClick="OnItemClick"
                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Margin="16" Padding="8">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

    <!-- Toolbar -->
    <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                BorderBrush="LightGray" BorderThickness="1" Orientation="Horizontal">
      <ComboBox x:Name="LanguageComboBox" 
                  MinWidth="100"
                  MinHeight="100"
                  Margin="0 0 20 0">
        <ComboBoxItem Content="С#"/>
        <ComboBoxItem Content="Python"/>
        <ComboBoxItem Content="VB.Net"/>
        <ComboBoxItem Content="VBA"/>
        <ComboBoxItem Content="MATLAB"/>
        <ComboBoxItem Content="S-expr"/>
        <ComboBoxItem Content="XML"/>
      </ComboBox>

      <Button Command="{Binding ClearCodeBlocksCommand}" 
                  MinHeight="100">Clear</Button>
    </StackPanel>
    
    <!-- Code view -->
    <ScrollViewer x:Name="CodeView" Grid.Column="1" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Margin="0 16" Padding="8">
      <StackPanel x:Name="CodeBlocks" Padding="10"/>
    </ScrollViewer>

    <!-- Method parameters -->
    <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" RowDefinitions ="*, *"
          VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
      <StackPanel Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Margin="16 16 16 0">
        <Border Background="{StaticResource BlockHeader}">
          <TextBlock Style="{StaticResource ContentBlockHeader}">Arguments</TextBlock>
        </Border>

        <Grid x:Name="InputParametersGrid" ColumnDefinitions="*, *"/>
      </StackPanel>

      <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Margin="16">
        <Border Background="{StaticResource BlockHeader}">
          <TextBlock Style="{StaticResource ContentBlockHeader}" >Results</TextBlock>
        </Border>

        <Grid x:Name="OutputParametersGrid" ColumnDefinitions="*, *"/>
      </StackPanel>
    </Grid>
